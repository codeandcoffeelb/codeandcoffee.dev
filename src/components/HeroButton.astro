---
type ButtonKind = "meetup" | "discord";

const buttonType: ButtonKind = Astro.props.type;
const className = 'big-button' + (' ' + (buttonType || ''));

export type Props = {
    type: ButtonKind
};
---

<button class={className}>
    <slot />
</button>

<style>
    .big-button {
        width: 100%;
        height: 75px;
        padding: .5em 1ch;
        border:0;

        font-weight: bold;

        color: #fff;
        background: #444;
        border-radius: 5px;

        cursor: pointer;
    }

    .big-button:hover {
        background: #777;
    }

    .meetup {
        background: red;
    }

    .discord {
        background: purple;
    }
</style>
