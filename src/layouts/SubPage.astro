---
import Layout from './Layout.astro';
import ContentWrapper from '../components/ContentWrapper.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
	<ContentWrapper>
		<slot />
	</ContentWrapper>
</Layout>

<style>
	@import "https://cdn.jsdelivr.net/npm/gutenberg-web-type@1/assets/combined.min.css";

	.subnavi {
		margin-bottom: 1rem;
		a {
			display: block;
			padding: 2ch;
			color: #333;

			&:hover {
				background-color: #333;
				color: #fff;
			}
		}
	}
</style>